<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">


    <Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        android:id="@+id/btnKuning"
        android:background="#FFEB3B"
        android:text="Button Kuning"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <Button
        app:layout_constraintBottom_toBottomOf="@id/btnKuning"
        app:layout_constraintEnd_toEndOf="@id/btnKuning"
        android:id="@+id/btnBiru"
        android:textColor="#FFF"
        android:background="#154EDB"
        android:text="Button Biru"
        android:layout_width="150dp"
        android:layout_height="100dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</androidx.constraintlayout.widget.ConstraintLayout>